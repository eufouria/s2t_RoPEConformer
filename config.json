{
    "dataset": {
        "librispeech_path": "data/",
        "train_subsets": ["train-clean-100"],
        "test_subsets": ["test-clean", "test-other"],
        "valid_subsets": ["dev-clean", "dev-other"]
    },
    "audio": {
        "sample_rate": 16000,
        "win_length": 320,
        "hop_length": 160,
        "n_mels": 80
    },
    "acoustic_model": {
        "input_dims": 80,
        "hidden_dims": 128,
        "enc_hidden_dims": 128,
        "dropout": 0.1,
        "ff_expansion_factor": 4,
        "ff_dropout": 0.2,
        "attn_num_heads": 4,
        "mhsa_dropout": 0.1,
        "kernel_size": 31,
        "conv_dropout": 0.1,
        "enc_num_layers": 16,
        "num_classes": 29
    },
    "training": {
        "checkpoint_path": "checkpoints/RoPEconformer_checkpoint{}_dev.pth",
        "batch_size": 16,
        "num_workers": 4,
        "lr":2,
        "betas": [0.9, 0.98],
        "weight_decay": 1e-3,
        "warmup_steps": 10000,
        "min_lr": 1e-6,
        "epochs": 100
    },
    "seed": 13
}
